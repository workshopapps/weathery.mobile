<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/weather_item_id"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="8:00\nAM"
            android:padding="10dp"
            android:textAlignment="viewEnd"
            android:id="@+id/time_id"
            android:fontFamily="@font/outfit_regular"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/time_id"
            android:layout_marginStart="16dp"

            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/ellipse_id"
                android:src="@drawable/ellipse"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:paddingBottom="10dp"
                android:id="@+id/divider_line"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:src="@drawable/line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toRightOf="@id/line1"
            android:layout_marginLeft="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_description_tv"
                android:textSize="16sp"
                android:fontFamily="@font/outfit_regular"
                android:text="Partly Sunny" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:id="@+id/weather_risk_tv"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/outfit_regular"
                    android:text="High dust level" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/mdi_warning_circl" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/weather_icon"
            android:layout_alignParentEnd="true"
            android:src="@drawable/weather_iconn"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>