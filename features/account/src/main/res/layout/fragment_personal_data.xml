<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDataFragment">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:id="@+id/lin5">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/account_back_arrow"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:textColor="#EF6820"
            android:text="Personal Data"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lin5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:fontFamily="@font/outfit_regular"
            android:text="First name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_height="56dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/first_name"
                android:fontFamily="@font/outfit_regular"
                android:text="Rahmon"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_regular"
            android:id="@+id/name2"
            android:text="Last name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/name2"
            android:layout_centerHorizontal="true"
            android:layout_height="56dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/last_name"
                android:fontFamily="@font/outfit_regular"
                android:text="Rahmon"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name3"
            android:fontFamily="@font/outfit_regular"
            android:text="Date of birth"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/name3"
            android:layout_centerHorizontal="true"
            android:layout_height="56dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rahmon"
                android:fontFamily="@font/outfit_regular"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_regular"
            android:id="@+id/name4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/name4"
            android:layout_centerHorizontal="true"

            android:layout_height="56dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/date_ob"
                android:fontFamily="@font/outfit_regular"
                android:text="Rahmon"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_regular"
            android:id="@+id/name5"
            android:text="Gender"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/name5"
            android:background="@drawable/edit_text_background"
            android:layout_centerHorizontal="true"
            android:layout_height="56dp">

            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/maleRadioButton"
                    android:layout_gravity="start"
                    android:layout_width="182dp"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/femaleRadioButton"
                    android:layout_width="182dp"
                    android:layout_gravity="end"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name6"
            android:fontFamily="@font/outfit_regular"
            android:text="Address"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/name6"
            android:layout_centerHorizontal="true"
            android:layout_height="56dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/outfit_regular"
                android:id="@+id/account_address"
                android:text="10, Ella Comfort Str, lagos"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Update Personal Data"
        android:layout_height="50dp"
        android:fontFamily="@font/outfit_regular"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout6"
        android:background="@drawable/account_update_btn_bg"
        android:id="@+id/update_personal_info_id"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>