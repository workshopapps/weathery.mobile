<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/personalDataFragment"
        android:name="com.gear.weathery.account.PersonalDataFragment"
        android:label="fragment_personal_data"
        tools:layout="@layout/fragment_personal_data" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.gear.weathery.account.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_personalDataFragment"
            app:destination="@id/personalDataFragment" />
        <action
            android:id="@+id/action_profileFragment_to_uploadPictureFragment"
            app:destination="@id/uploadPictureFragment" />
    </fragment>
    <fragment
        android:id="@+id/uploadPictureFragment"
        android:name="com.gear.weathery.account.UploadPictureFragment"
        android:label="fragment_upload_picture"
        tools:layout="@layout/fragment_upload_picture" />
</navigation>